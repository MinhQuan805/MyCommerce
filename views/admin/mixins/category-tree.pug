mixin category-tree(records, parent = "", level = 1)
  each item in records
    - const prefix = Array(level + 1).join("-- ");
    option(
      value=item.id
      selected=(item.id == parent)
    ) #{prefix} #{ item.title}
      if item.children && item.children.length > 0
        +category-tree(item.children, parent, level + 1)
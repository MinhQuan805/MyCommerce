extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)
  if (role.permissions.includes("role_create"))
    h1(class="mb-4") Thêm mới nhóm quyền
    form(action=`${prefixAdmin}/role/create`, id="form-create-product", method="POST")
      div(class="form-group mt-2")
        label(for="title") Tiêu đề
        input(class="form-control" type="text", id="title", name="title", required)


      div(class="form-group mt-2")
        label(for="desc") Mô tả ngắn
        textarea(class="form-control text-editor" id="desc", name="description", rows="5")
      
      div(class="form-group mt-2")
        button(
          type="submit"
          class="btn btn-primary"
        ) Tạo mới
      script(src="/admin/js/product.js")  